#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include "3-calc.h"

/**
 * op_add - adds two numbers
 * @a: first number
 * @b: second number
 * Return: the sum of a and b
 */
int op_add(int a, int b)
{
	return (a + b);
}


/**
 * op_sub - subtracts two numbers
 * @a: first number
 * @b: second number
 * Return: the sum of a and b
 */
int op_sub(int a, int b)
{
	return (a - b);
}


/**
 * op_mul - multiplies two numbers
 * @a: first number
 * @b: second number
 * Return: the sum of a and b
 */
int op_mul(int a, int b)
{
return (a * b);
}


/**
 * op_div - devides two numbers
 * @a: first number
 * @b: second number
 * Return: the sum of a and b
 */
int op_div(int a, int b)
{
return (a / b);
}


/**
 * op_mod - find remainder of two numbers
 * @a: first number
 * @b: second number
 * Return: the sum of a and b
 */
int op_div(int a, int b)
{
return (a % b);
}
